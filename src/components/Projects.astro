---
import DjangoIcon from "../components/icons/pillsIcons/Django.astro";
import PythonIcon from "../components/icons/pillsIcons/Python.astro";
import RedisIcon from "../components/icons/pillsIcons/Redis.astro";
import SQLIcon from "../components/icons/pillsIcons/SQL.astro";
import GithubIcon from "../components/icons/Github.astro";
import LinkIcon from "../components/icons/Link.astro";

import LinkButton from "../components/LinkButton.astro";

const TAGS = {
  PYTHON: {
    name: "Python",
    class: "bg-yellow-200/50 text-black dark:text-white",
    icon: PythonIcon,
  },
  DJANGO: {
    name: "Django",
    class: "bg-green-200/50 text-black dark:text-white",
    icon: DjangoIcon,
  },
  REDIS: {
    name: "Redis",
    class: "bg-red-300/50 text-black dark:text-white",
    icon: RedisIcon,
  },
  SQL: {
    name: "SQL",
    class: "bg-blue-100/50 text-black dark:text-white",
    icon: SQLIcon,
  },
};

const PROJECTS = [
  {
    title: "BCD-Games",
    description:
      "TFG para la obtención de la titulación de la FP Superior en Desarrollo Web. Es un proyecto que toca el mundo de los videojuegos y la información tanto objetiva como subjetiva de los mismos, juntando ambas en una misma plataforma. Proyecto en desarrollo y puliéndose",
    link: "",
    github: "https://github.com/JLDJR2481/BCD-Games",
    image: "/projects/bcd-games.webp",
    tags: [TAGS.DJANGO, TAGS.PYTHON, TAGS.REDIS, TAGS.SQL],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <ul class="flex flex-row mb-2 gap-x-2 mt-4">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-md ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-6" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GithubIcon class="size-6" />
              Repositorio
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <LinkIcon class="size-4" />
              Despliegue
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>
